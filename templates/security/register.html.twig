{% extends 'security/base-security.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <h1>Rejestracja</h1>

    {# {% if error %} #}
    {# <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div> #}
    {# {% endif %} #}

    <form action="{{ path('register') }}" method="post">
        <div class="form-line">
            <div>
                <label class="form-lbl" for="username">Imię</label>
                <input class="input-bar" type="text" id="username" name="_username"/>
            </div>
            <div>
                <label class="form-lbl" for="username">Nazwisko</label>
                <input class="input-bar" type="text" id="username" name="_username"/>
            </div>
        </div>
        <label class="form-lbl" for="username">E-mail</label>
        <input class="input-bar" type="text" id="username" name="_username"/>

        <div class="form-line">
            <div>
                <label class="form-lbl" for="password">Hasło</label>
                <input class="input-bar" type="password" id="password" name="_password"/>
            </div>
            <div>
                <label class="form-lbl" for="password">Hasło (powtórz)</label>
                <input class="input-bar" type="password" id="password" name="_password"/>
            </div>
        </div>
        {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account"/>
        #}

        <div class="checkbox">
            <label>
                <input type="checkbox" value="remember-me"> Akceptuję regulamin*
            </label>
        </div>

        <button type="submit" class="btn btn-secondary submit-btn">Zarejestruj się</button>

        <div class="text-small">
            Masz już konto?
            <a href="{{ path('login') }}">Zaloguj się!</a>
        </div>
    </form>
{% endblock %}

