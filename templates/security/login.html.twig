{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
    {# <link rel="stylesheet" href="{{ asset('login.css') }}"/> #}
{% endblock %}

{% block body %}
    <div class="login-page-container">
        {% block content %}
            <div class="login-container">
                <h1>Logowanie</h1>

                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('login') }}" method="post">
                    <label class="form-lbl" for="username">E-mail</label>
                    <input class="input-bar" type="text" id="username" name="_username" value="{{ last_username }}"/>

                    <label class="form-lbl" for="password">Hasło</label>
                    <input class="input-bar" type="password" id="password" name="_password"/>

                    {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account"/>
                    #}

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="remember-me"> Zapamiętaj mnie
                        </label>
                    </div>

                    <button type="submit" class="btn btn-secondary submit-btn">Zaloguj</button>

                    <div class="text-small">
                        Nie masz konta?
                        <a href="#">Zarejestruj się!</a>
                    </div>
                </form>
            </div>
        {% endblock %}
    </div>
{% endblock %}
